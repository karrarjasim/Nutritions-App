<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NutritionsApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/label_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="title_text">
        <item name="android:textColor">@color/label_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="label_text">
        <item name="android:textColor">@color/label_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="body_text">
        <item name="android:textColor">@color/gray_mid</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>


    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/gray_mid</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="linerlayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">17dp</item>
        <item name="android:paddingLeft">29dp</item>
        <item name="android:paddingRight">25dp</item>
    </style>

    <style name="linerlayout2" parent="linerlayout">
        <item name="android:layout_marginTop">20dp</item>
    </style>



    <style name="textview" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/label_color</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textStyle">bold</item>
    </style>
   <style name="titelOfCatogry" parent="textview">
       <item name="android:fontFamily">@font/poppins_medium</item>
   </style>

    <style name="textviewMarginStart" parent="textview">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>

    </style>
    <style name="textviewMarginEnd" parent="textview">
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>


    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>
</resources>