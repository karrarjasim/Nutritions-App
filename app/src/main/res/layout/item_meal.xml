<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/single_item_card1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardElevation="16dp"
    app:cardBackgroundColor="@color/textView_color"
    app:cardCornerRadius="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/card_name"
            style="@style/textviewMarginStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cardName"
            android:layout_weight="2"
            android:layout_marginVertical="24dp" />

        <TextView
            android:id="@+id/card_calories"
            style="@style/textviewMarginEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="24dp"
            android:paddingLeft="14dp"
            android:text="@string/cardCalories" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
